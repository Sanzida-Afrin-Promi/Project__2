<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet" />
</head>

<body>

    <div className="App">
        <section class="vh-100">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-8 offset-md-0">
                        <div class="card" id="list1">
                            <div class="card-body py-4 px-4 px-md-5">

                                <div class="d-flex justify-content-between">
                                <p class="h1 text-start mt-3 mb-4 pb-3">
                                    Todo Lists
                                </p>
                                <p class="align-self-center logout-img">
                                    <a href="/logout"><img src="/img/logout.svg" alt="Logout"></a>
                                </p>
                                </div>
                                

                                <div class="pb-2">
                                    <div class="card">
                                        <div class="card-body">
                                            <form action="/todo/create" method="post">
                                                <div class="d-flex flex-row align-items-center input-group mb-3">
                                                    <input type="text" class="form-control form-control-lg"
                                                        id="exampleFormControlInput1" required
                                                        placeholder="Write todo..." name="title" />
                                                    <button type="submit" class="btn btn-info btn-lg">Add</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

            
                                {{#each todos}}

                                <ul class="list-group card rounded-2 mb-2 p-2 list-group-horizontal rounded-0 bg-transparent">

                                    <li
                                        class="list-group-item px-3 py-1 d-flex align-items-center flex-grow-1 border-0 bg-transparent">
                                        <p class="lead fw-normal mb-0">{{this.title}}</p>
                                    </li>
                                    <li class="list-group-item ps-3 pe-0 py-1 rounded-0 border-0  bg-transparent align-self-center">
                                        <div class="d-flex flex-row justify-content-end mb-1">
                                            <a href="/todo/edit/{{this.id}}" class="text-info" data-mdb-toggle="tooltip"
                                                title="Edit todo"><i class="fas fa-pencil-alt me-3"></i></a>
                                            <a href="/todo/delete/{{this.id}}" class="text-danger mx-2" data-mdb-toggle="tooltip"
                                                title="Delete todo"><i class="fas fa-trash-alt"></i></a>
                                        </div>

                                    </li>
                                </ul>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>